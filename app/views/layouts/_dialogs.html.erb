<% if flash[:error] %>
    <div data-history="false" data-role="popup" id="errorsDialog" data-overlay-theme="b" data-theme="b" data-dismissible="false" style="max-width:400px;">
      <div data-role="header" data-theme="a">
        <h1>Errores</h1>
      </div>
      <div role="main" class="ui-content">
        <h3 class="ui-title">Se han encontrado los siguientes errores</h3>
        <p><%= flash[:error] %></p>
        <a href="#" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" data-rel="back">Ok</a>
      </div>
    </div>
    <script type="text/javascript" charset="utf-8">
      $(document).on("pageshow", function () {
        $("#errorsDialog").popup("open");
      });
    </script>
<% end %>

