<%= content_for :title, "Registro" %>
<%= render 'form' %>

<% if @user.errors.any? %>
    <div data-role="popup" data-history="false" id="popupDialog" data-overlay-theme="b" data-theme="b" data-dismissible="false" style="max-width:400px;">
      <div data-role="header" data-theme="a">
        <h1>Informaci√≥n</h1>
      </div>
      <div role="main" class="ui-content">
        <h3 class="ui-title">No hemos podido crear su cuenta, es necesario que corrija los siguientes errores:</h3>
        <ul id="new_user_errors">
          <% @user.errors.messages.values.each do |msg| %>
              <% msg.each do |m| %>
                  <li><%= m %></li>
              <% end %>
          <% end %>
        </ul>
        <a href="#" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-b" data-rel="back">Ok</a>
      </div>
    </div>
    <script type="text/javascript" charset="utf-8">
      $(document).on("pageshow", function () {
        $("#popupDialog").popup("open");
      });
    </script>
<% end %>