<%= form_for(@user, data: {ajax: "false"}) do |f| %>
    <h3 class="center_title">¡Rellena este sencillo formulario para empezar a usar FitTable!</h3>
    <div class="field">
      <%= f.label :email %></br>
      <%= f.text_field :email, placeholder: "Email", required: true %>
    </div>

    <div class="field">
      <%= f.label :username %></br>
      <%= f.text_field :username, placeholder: "Username", required: true %>
    </div>

    <div class="field">
      <%= f.label :password %></br>
      <%= f.password_field :password, placeholder: "Password", required: true %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %></br>
      <%= f.password_field :password_confirmation, required: true %>
    </div>

    <div class="actions">
      <%= f.submit "¡Crear cuenta!", data: {icon: "user", iconpos: "right"}, required: true %>
    </div>
<% end %>
