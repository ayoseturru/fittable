<%= form_for @publication, html: {multipart: true, "data-ajax" => "false"} do |f| %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title, required: true %>
    </div>

    <div class="field">
      <%= f.label :category %>
      <%= f.select :category, [['selecciona', ''], ['Piernas'], ['Espalda'], ['Brazos'], ['Abdominales']], required: true %>
    </div>

    <div class="field ">
      <%= f.label :description %>
      <%= f.text_field :description, required: true %>
    </div>

    <% if params[:action] != "edit" %>
        <%= f.fields_for :publication_attachments do |p| %>
            <div class="field">
              <%= p.label :image, "Seleccione un m치ximo de 3 im치genes, s칩lo se aceptar치n las 3 primeras" %><br>
              <%= p.file_field :image, :multiple => true, name: "publication_attachments[image][]", required: true %>
            </div>
        <% end %>
    <% end %>

    <div class="actions">
      <%= f.submit @publication.description.present? ? "Actualizar" : "Crear" %>
    </div>
<% end %>
