<li id="<%= publication.id %>" class="ui-li-has-thumb">
  <%= link_to publication do %>
      <% if publication.publication_attachments.first %>
          <%= image_tag publication.publication_attachments.first.image %>
      <% end %>
      <h3> <%= publication.title.capitalize %> por @<%= publication.user.username %></h3>
      <h3> <%= publication.like %> likes y compartido <%= publication.times %> veces</h3>
      <% if publication.owned_by?(current_user) %>
          <h6>Click para editar u eliminar</h6>
      <% end %>
      <a href="#addPublicationMenu" id="<%= 'publication-' + publication.id.to_s %>" data-rel="popup" data-transition="slideup" class="ui-btn ui-shadow ui-btn-inline ui-icon-gear ui-btn-icon-left ui-btn-a">Actions...</a>
  <% end %>
</li>